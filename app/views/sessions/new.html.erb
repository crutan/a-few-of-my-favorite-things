
<div>
  <h1>Login</h1>
  <%= form_for :login do |form| %>
    <div>
        <%= form.label :email, "Email Address" %>
        <%= form.text_field :email %>
      </div>

    <div>
        <%= form.label :password, "Password" %>
        <%= form.password_field :password %>
    </div>

    <div>
      <%= form.submit "Log In" %>
    </div>
  <% end %>

</div>
<div>
  Don't have an account?  <%= link_to "Create One", new_user_path %>
</div>
